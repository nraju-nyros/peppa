<div align="center">
 

  <%= form_for @rating, :url => {:action => "create", :controller => "ratings"} do |f| %>
                
               
    <div class="form-group">
      <div class="col-sm-8">    
        <span class="err"><%= @rating.errors[:comments].join('. ') %></span><br/>
          <%= f.text_area :comments ,:rows => 2, :cols => 50, :class => 'form-control', :placeholder => 'Write your review here'%>
           <span class= "rating-form" required = 'true'></span>
         
        
      </div>
    </div> 
    
    <div class= "form-group" >
      <div class="col-sm-8">    
        <%= f.submit "Submit Review",class: "btn btn-info btn-sm" %> 
      </div>
    </div> 
  <% end %>
</div>

<style type="text/css">
  .img{
    border-radius: 50%;
  }
</style>

<script type="text/javascript">
  $('.rating-form').raty({
      path:'/assets/',
      scoreName: 'rating[rating]'
  });



$('input[name="rating-rating"]').addClass('required');

</script>